<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.applications.dk_sky.calcapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/display_fragment"/>

        <!--first set-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="1dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:fontFamily="@font/work_sans_light"
                android:padding="8dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button_operator"
                android:text="@string/buttonMemClear"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:fontFamily="@font/work_sans_light"
                android:padding="8dp"
                android:layout_marginRight="1dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button_operator"
                android:text="@string/buttonMemRecall"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:fontFamily="@font/work_sans_light"
                android:padding="8dp"
                android:layout_marginRight="1dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button_operator"
                android:text="@string/buttonMemAdd"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:fontFamily="@font/work_sans_light"
                android:padding="8dp"
                android:layout_marginRight="1dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button_operator"
                android:text="@string/buttonMemRemove"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onClearClick"
                android:padding="8dp"
                android:text="@string/buttonClear"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:layout_marginRight="1dp"
                android:textSize="20sp"
                android:fontFamily="@font/work_sans_light"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button"
                android:text="@string/buttonToggleSign" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onDeleteClick"
                android:padding="8dp"
                android:text="@string/buttonDelete"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_operator"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onOperatorClick"
                android:padding="8dp"
                android:text="@string/buttonDivide"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Second set -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="1dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onFunctionClick"
                android:padding="8dp"
                android:text="@string/buttonCubicRoot"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onFunctionClick"
                android:padding="8dp"
                android:text="@string/buttonSquareRoot"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onLeftBracketClick"
                android:padding="8dp"
                android:text="@string/buttonLeftP"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onRightBracketClick"
                android:padding="8dp"
                android:text="@string/buttonRightP"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onDigitClick"
                android:padding="8dp"
                android:text="@string/button7"
                android:textColor="@color/primaryText"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onDigitClick"
                android:padding="8dp"
                android:text="@string/button8"
                android:textColor="@color/primaryText"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onDigitClick"
                android:padding="8dp"
                android:text="@string/button9"
                android:textColor="@color/primaryText"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_operator"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onOperatorClick"
                android:padding="8dp"
                android:text="@string/buttonMultiply"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="1dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="monospace"
                android:onClick="onOperatorClick"
                android:padding="8dp"
                android:text="@string/buttonPower"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onOperatorClick"
                android:padding="8dp"
                android:text="@string/buttonPercent"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onFunctionClick"
                android:padding="8dp"
                android:text="@string/buttonFactorial"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onFunctionClick"
                android:padding="8dp"
                android:text="@string/buttonAbsolute"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onDigitClick"
                android:padding="8dp"
                android:text="@string/button4"
                android:textColor="@color/primaryText"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onDigitClick"
                android:padding="8dp"
                android:text="@string/button5"
                android:textColor="@color/primaryText"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onDigitClick"
                android:padding="8dp"
                android:text="@string/button6"
                android:textColor="@color/primaryText"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_operator"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onOperatorClick"
                android:padding="8dp"
                android:text="@string/buttonPlus"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="1dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onFunctionClick"
                android:padding="8dp"
                android:text="@string/buttonNatLogarithm"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onFunctionClick"
                android:padding="8dp"
                android:text="@string/buttonSine"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onFunctionClick"
                android:padding="8dp"
                android:text="@string/buttonCosine"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onFunctionClick"
                android:padding="8dp"
                android:text="@string/buttonTangent"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onDigitClick"
                android:padding="8dp"
                android:text="@string/button1"
                android:textColor="@color/primaryText"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onDigitClick"
                android:padding="8dp"
                android:text="@string/button2"
                android:textColor="@color/primaryText"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onDigitClick"
                android:padding="8dp"
                android:text="@string/button3"
                android:textColor="@color/primaryText"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_operator"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onOperatorClick"
                android:padding="8dp"
                android:text="@string/buttonMinus"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="1dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onFunctionClick"
                android:padding="8dp"
                android:text="@string/buttonLogarithm"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="16sp" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:fontFamily="@font/work_sans_light"
                android:padding="8dp"
                android:layout_marginRight="1dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button"
                android:text="@string/buttonPi"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="20sp"
                android:fontFamily="@font/work_sans_light"
                android:padding="8dp"
                android:layout_marginRight="1dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button"
                android:text="@string/buttonE"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:fontFamily="@font/work_sans_light"
                android:padding="8dp"
                android:layout_marginRight="1dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/button"
                android:text="@string/buttonF"
                android:textAllCaps="false"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="2.02"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onDigitClick"
                android:padding="8dp"
                android:text="@string/button0"
                android:textColor="@color/primaryText"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onDotClick"
                android:padding="8dp"
                android:text="@string/buttonDot"
                android:textColor="@color/primaryText"
                android:textSize="20sp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/button_extra"
                android:fontFamily="@font/work_sans_light"
                android:onClick="onEqual"
                android:padding="8dp"
                android:text="@string/buttonEqual"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>