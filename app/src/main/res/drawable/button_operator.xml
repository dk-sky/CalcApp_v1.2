<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorAccent"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/colorPrimaryLight"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <size
                android:width="60dp"
                android:height="60dp" />
        </shape>
    </item>
</selector>